{
  "name": "pact-mock-js",
  "version": "2.0.0",
  "description": "A Library to build Pact interactions by leveraging existing mocks",
  "keywords": [
    "typescript",
    "template",
    "jest"
  ],
  "author": {
    "name": "Ludovic Dorival"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/ludorival/pact-mock-js.git"
  },
  "exports": {
    "./core": {
      "default": "./dist/src/core/index.js",
      "types": "./dist/src/core/index.d.ts"
    },
    "./msw": {
      "default": "./dist/src/msw/index.js",
      "types": "./dist/src/msw/index.d.ts"
    },
    "./cypress": {
      "default": "./dist/src/cypress/index.js",
      "types": "./dist/src/cypress/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && tsc --build --verbose",
    "changelog": "conventional-changelog -p angular -u",
    "changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "clean": "(rm -r ./.nyc_output || true) && (rm -r ./coverage || true) && (rm -r dist || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "cover": "yarn test --coverage",
    "lint": "eslint . --fix",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "yarn build",
    "test": "jest && npm run cypress",
    "cypress": "cypress run --component",
    "cypress:open": "cypress open",
    "upgrade": "npx npm-check -u",
    "preversion": "yarn test",
    "version": "yarn build",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "devDependencies": {
    "@cypress/react": "^8.0.2",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.14.192",
    "@types/node": "20.17.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "8.11.0",
    "@typescript-eslint/parser": "8.11.0",
    "@vitejs/plugin-react": "^4.3.2",
    "axios": "^1.7.7",
    "cypress": "^13.15.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.13.0",
    "eslint-plugin-prettier": "5.2.1",
    "graphql": "^16.6.0",
    "jest": "29.7.0",
    "msw": "^2.4.11",
    "prettier": "3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.6.3",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
